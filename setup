#!/bin/bash

# . ./bashrc/setup.sh

clear

script_dir="$( cd -- "$( dirname -- "${BASH_SOURCE[0]:-$0}"; )" &> /dev/null && pwd 2> /dev/null; )";
export JJC_CONFIG_DIR=$(readlink -f $script_dir)

. $JJC_CONFIG_DIR/lib/headers

print_title 'JJC CONFIG'

echo "About to update apt & apt-get"
# NOTE: apt is the newer one
# https://itsfoss.com/apt-vs-apt-get-difference/
# TODO apparently I shouldn't use apt in scripts .. go back to apt-get
$JJC_CONFIG_DIR/lib/update_apt_only_if_old_cache
sudo apt-get update

bash $JJC_CONFIG_DIR/bash/setup
bash $JJC_CONFIG_DIR/git/setup
$JJC_CONFIG_DIR/ack/setup
bash $JJC_CONFIG_DIR/asdf/setup
bash $JJC_CONFIG_DIR/fd/setup


# Requires ASDF to be set up already
# TODO rename this dir to nvim
bash $JJC_CONFIG_DIR/neovim/setup
$JJC_CONFIG_DIR/python/setup


# TODO this is only part of comoto setup
bash $JJC_CONFIG_DIR/comoto/setup
